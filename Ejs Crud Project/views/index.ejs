<!-- index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>To Do List</title>
  <style>
    /* Basic reset */
    *{box-sizing:border-box;margin:0;padding:0}
    body{font-family:Inter,Segoe UI,Roboto,Arial,sans-serif;background:#f4f7fb;color:#222;line-height:1.4;padding:24px}

    .container{max-width:960px;margin:0 auto}

    .card{
      background:#fff;border-radius:12px;padding:20px;box-shadow:0 6px 18px rgba(22,38,84,0.06);margin-bottom:20px;
    }

    h1{font-size:22px;margin-bottom:12px;color:#0b2545}

    form.row{display:flex;gap:12px;flex-wrap:wrap;align-items:center}
    form .field{flex:1;min-width:150px}
    input[type="text"]{width:100%;padding:10px 12px;border-radius:8px;border:1px solid #d6def2;background:#fbfdff}
    input[type="text"][hidden]{display:none}
    button.btn{
      padding:10px 16px;border-radius:8px;border:0;background:#1766d1;color:#fff;font-weight:600;cursor:pointer;box-shadow:0 6px 12px rgba(23,102,209,0.18)
    }
    button.btn:active{transform:translateY(1px)}

    /* Table */
    .table-wrap{overflow:auto}
    table{width:100%;border-collapse:collapse;margin-top:16px}
    th,td{padding:12px 10px;text-align:left;border-bottom:1px solid #eef4ff}
    thead th{background:#f8fbff;color:#0b2545;font-weight:700}
    tr:hover td{background:#fbfdff}

    a.action{display:inline-block;padding:6px 10px;border-radius:8px;text-decoration:none;font-weight:600}
    a.edit{background:#fff6e6;color:#9b5a00;border:1px solid #ffebc8}
    a.delete{background:#ffeef0;color:#8b1e2d;border:1px solid #ffd6dd}

    /* Responsive */
    @media (max-width:640px){
      form.row{flex-direction:column}
      th:nth-child(1),td:nth-child(1){width:48px}
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <h1>To Do List</h1>

      <form action="/addData" method="post" class="row">
        <input type="text" hidden name="id" value="<%= data.length + 1 %>">

        <div class="field">
          <input type="text" name="name" placeholder="Enter your name" required>
        </div>
        <div class="field">
          <input type="text" name="subject" placeholder="Enter your subject" required>
        </div>
        <div class="field">
          <input type="text" name="city" placeholder="Enter your city" required>
        </div>

        <div style="align-self:stretch;display:flex;align-items:center">
          <button type="submit" class="btn">Submit</button>
        </div>
      </form>
    </div>

    <div class="card">
      <div class="table-wrap">
        <table border="0" role="table">
          <thead>
            <tr>
              <th>id</th>
              <th>name</th>
              <th>subject</th>
              <th>city</th>
              <th colspan="2">action</th>
            </tr>
          </thead>
          <tbody>
            <% data.map((e,i) => {  %>
            <tr>
              <td><%= e.id %></td>
              <td><%= e.name %></td>
              <td><%= e.subject %></td>
              <td><%= e.city %></td>
              <td><a class="action edit" href="/editData/<%= e.id %>">Edit</a></td>
              <td><a class="action delete" href="/deleteData/<%= e.id %>" onclick="return confirm('Are you sure you want to delete this entry?')">Delete</a></td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>

    <p style="text-align:center;color:#6b7280;font-size:13px;margin-top:8px">Tip: Use the Edit button to change a record. This UI uses simple inline/internal CSS so you can copy it directly into your EJS files.</p>
  </div>

</body>
</html>



